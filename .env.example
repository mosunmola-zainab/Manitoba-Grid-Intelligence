# Manitoba Grid Intelligence - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# PostgreSQL / TimescaleDB
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=grid_intelligence
POSTGRES_USER=grid_user
POSTGRES_PASSWORD=your_secure_password_here

# =============================================================================
# Apache Kafka
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9094
KAFKA_CONSUMER_GROUP=grid-intelligence-consumer

# =============================================================================
# Apache Airflow
# =============================================================================
AIRFLOW_ADMIN_USER=admin
AIRFLOW_ADMIN_PASSWORD=your_airflow_password_here
AIRFLOW__CORE__FERNET_KEY=your_fernet_key_here

# =============================================================================
# External API Keys
# =============================================================================
# Manitoba Hydro API (if available)
MANITOBA_HYDRO_API_KEY=your_api_key_here
MANITOBA_HYDRO_API_URL=https://api.example.com/v1

# Environment Canada Weather API
WEATHER_API_KEY=your_weather_api_key_here
WEATHER_API_URL=https://api.weather.gc.ca

# =============================================================================
# Application Settings
# =============================================================================
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true

# Data refresh intervals (in seconds)
SENSOR_POLL_INTERVAL=60
WEATHER_POLL_INTERVAL=900
DEMAND_POLL_INTERVAL=300

# =============================================================================
# Cloud Provider (for Terraform)
# =============================================================================
# AWS
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ca-central-1

# Or Azure
# AZURE_SUBSCRIPTION_ID=your_subscription_id
# AZURE_TENANT_ID=your_tenant_id
# AZURE_CLIENT_ID=your_client_id
# AZURE_CLIENT_SECRET=your_client_secret
